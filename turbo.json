{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:prettier": {
      "dependsOn": ["^lint:prettier"]
    },
    "lint:eslint": {
      "dependsOn": ["^lint:eslint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "version": {
      "cache": false,
      "persistent": true
    },
    "publish": {
      "cache": false,
      "persistent": true
    }

  }
}
